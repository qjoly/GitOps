{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  },
  "regexManagers": [
    {
      "description": "Update docker image references",
      "fileMatch": ["\\.yaml$", "\\.yml$"],
      "matchStrings": ["image: (?<depName>.*?):(?<currentValue>.*?)\\s+"],
      "datasourceTemplate": "docker"
    }]

}
